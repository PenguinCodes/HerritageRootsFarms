---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import EventList from "../components/Sections/EventList.astro";
import SermonList from "../components/Sections/SermonList.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout>
  <HeroSection
    title="Heritage Roots Farms"
    subtitle="From village to your table"
    backgroundImage="/uploads/IMG-20250710-WA0001.jpg"
    ctaText="Contact Us"
    ctaLink="/contact"
  />

  <!-- Service Times -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Heritage Hits</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Desi Eggs</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">30 / 200 Rs</p>
            <br />
            <p class="text-gray-600 mb-4">
              Fresh, organic eggs from our native hens, raised with care and
              love. Perfect for your breakfast or baking needs.
            </p>
          </div>

          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Desi Chikens</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">1 / 150 Rs</p>
            <br />
            <p class="text-gray-600 mb-4">
              Chikens raised in a natural environment, free from antibiotics and
              hormones. Enjoy the rich flavor and nutrition of our native
              breeds.
            </p>
          </div>
        </div>

        <Button href="/contact" variant="outline"> Contact Us </Button>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="/uploads/IMG-20250710-WA0002.jpg"
            alt="Our Church"
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>

        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Our Story: A Dream Rooted in Tradition
          </h2>
          <p class="text-gray-700 mb-6 text-lg">
            The journey of Heritage Roots began long before our first bird was
            raised. It started as a childhood dream in the heart of our founder,
            Asthik—a dream of working with his own hands, in harmony with
            nature, and raising pure, native birds the way they were always
            meant to live.
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            Tired of a world where honesty and hard work weren't always valued,
            Asthik chose to carve his own path. He wanted to create something
            real, something meaningful, rooted in the land he calls home.
          </p>

          <Button href="/about-us"> Learn More About Us </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Events Section -->
  <EventList />

  <!-- Sermons Section -->
  <SermonList />

  <!-- Ministries Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Products</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Healthy, 100% homemgrown
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card text-center p-8">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Children's Ministry</h3>
          <p class="text-gray-700 mb-4">
            Nurturing the spiritual growth of our children through engaging,
            age-appropriate activities.
          </p>
          <a
            href="/ministries/childrens-ministry"
            class="text-primary-600 font-medium hover:text-primary-700"
          >
            Learn More →
          </a>
        </div>

        <div class="card text-center p-8">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-secondary-100 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-secondary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Worship Ministry</h3>
          <p class="text-gray-700 mb-4">
            Leading our congregation in worship through music, song, and
            creative expression.
          </p>
          <a
            href="/ministries/worship-ministry"
            class="text-primary-600 font-medium hover:text-primary-700"
          >
            Learn More →
          </a>
        </div>

        <div class="card text-center p-8">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-accent-100 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-10 w-10 text-accent-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Community Outreach</h3>
          <p class="text-gray-700 mb-4">
            Serving our local community through various programs and initiatives
            to share God's love.
          </p>
          <a
            href="/ministries/community-outreach"
            class="text-primary-600 font-medium hover:text-primary-700"
          >
            Learn More →
          </a>
        </div>
      </div>

      <div class="mt-12 text-center">
        <Button href="/products" variant="outline"> View All Products </Button>
      </div>
    </div>
  </section>

